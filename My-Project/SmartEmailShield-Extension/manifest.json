{
  "manifest_version": 3,
  "name": "Smart Email Shield",
  "version": "1.0",
  "description": "Analyzes the current page for phishing threats.",

  "permissions": [
    "activeTab",  
    "scripting"   
  ],

  "host_permissions": [
    "http://192.168.56.1:5000/*" 
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },

  "icons": {
    "128": "icon.png"
  }
}